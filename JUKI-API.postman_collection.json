          }
        },
        {
          "name": "Get Profile by User ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/profiles/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["profiles", "{{userId}}"]
            },
            "description": "Gets the profile for any user by their ID."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
