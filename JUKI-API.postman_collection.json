{
  "info": {
    "name": "JUKI API",
    "description": "Complete API collection for JUKI Backend. This collection includes examples for all major endpoints and automatically handles authentication tokens.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "accessToken",
      "value": "<will_be_set_after_login>"
    },
    {
      "key": "refreshToken",
      "value": "<will_be_set_after_login>"
    },
    {
      "key": "userId",
      "value": "<will_be_set_after_login>"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}",
              "host": ["{{baseUrl}}"]
            },
            "description": "Checks the health of the API. Should return a success message."
          }
        }
      ]
    },
    {
      "name": "Auth",
      "description": "Handles user registration, login, and token management.",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.tokens.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.tokens.refreshToken);",
                  "    pm.collectionVariables.set('userId', response.user.id);",
                  "    console.log('Registration successful. Tokens and userId saved.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test.user@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user account. On success, it automatically saves the `accessToken`, `refreshToken`, and `userId` to collection variables."
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.tokens.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.tokens.refreshToken);",
                  "    pm.collectionVariables.set('userId', response.user.id);",
                  "    console.log('Login successful. Tokens and userId saved.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test.user@example.com\",\n  \"password\": \"SecurePass123!\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with an existing user. On success, it automatically saves the `accessToken`, `refreshToken`, and `userId` to collection variables."
          }
        },
        {
          "name": "Get Me (My Profile)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            },
            "description": "Retrieves the profile of the currently authenticated user based on the `accessToken`."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.refreshToken);",
                  "    console.log('Tokens refreshed successfully.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Generates a new pair of access and refresh tokens. Uses the `refreshToken` saved from login/register."
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            },
            "description": "Logs the user out by invalidating the current session associated with the refresh token."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"SecurePass123!\",\n  \"newPassword\": \"NewSecurePass456!\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "change-password"]
            },
            "description": "Allows an authenticated user to change their own password."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Users",
      "description": "Endpoints for managing users. Most of these are restricted to ADMIN or SUPER_ADMIN roles.",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users?page=1&limit=10&search=test&role=USER&status=ACTIVE",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": "test",
                  "disabled": true
                },
                {
                  "key": "role",
                  "value": "USER",
                  "description": "USER, ADMIN, SUPER_ADMIN",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "ACTIVE",
                  "description": "ACTIVE, INACTIVE, SUSPENDED, DELETED",
                  "disabled": true
                }
              ]
            },
            "description": "Lists all users with pagination. Supports filtering by search, role, and status. (Admin access required)"
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/stats",
              "host": ["{{baseUrl}}"],
              "path": ["users", "stats"]
            },
            "description": "Returns statistics about user counts (total, active, suspended, etc.). (Admin access required)"
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            },
            "description": "Retrieves a single user by their ID. The `{{userId}}` is automatically set after login. (Admin access required)"
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Update User [Admin]",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"new.email@example.com\",\n  \"role\": \"ADMIN\",\n  \"status\": \"SUSPENDED\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            },
            "description": "Updates a user's details. Only admins can use this. SUPER_ADMIN can change roles. `{{userId}}` is set from login, but you can change it to any user's ID."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Delete User [Admin]",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            },
            "description": "Soft-deletes a user by setting their status to DELETED. You cannot delete yourself. (Admin access required)"
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        }
      ]
    },
