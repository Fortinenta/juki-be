              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"UpdatedFirst\",\n  \"lastName\": \"UpdatedLast\",\n  \"phoneNumber\": \"1234567890\",\n  \"bio\": \"This is my updated bio.\",\n  \"dateOfBirth\": \"1990-12-31T00:00:00.000Z\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/profiles/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["profiles", "{{userId}}"]
            },
            "description": "Update the profile of the currently authenticated user. The `{{userId}}` is automatically set after login."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Delete My Avatar",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/profiles/{{userId}}/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["profiles", "{{userId}}", "avatar"]
            },
            "description": "Deletes the avatar for the currently authenticated user. You can only delete your own avatar."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "description": "Endpoints for managing user sessions.",
      "item": [
        {
          "name": "Get My Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sessions/me",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "me"]
            },
            "description": "Retrieves all active sessions for the currently authenticated user."
          },
          "auth": {
            "type": "bearer",
            "bearer": [
              {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
              }
            ]
          }
        },
        {
          "name": "Revoke All My Sessions",
          "request": {
            "method": "DELETE",
            "header": [],
