            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/trainings",
              "host": ["{{baseUrl}}"],
              "path": ["trainings"]
            },
            "description": "Mendapatkan daftar jadwal training yang tersedia (kuota > 0 & belum lewat)"
          },
          "response": []
        },
        {
          "name": "Get Training Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/trainings/{{selectedTrainingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["trainings", "{{selectedTrainingId}}"]
